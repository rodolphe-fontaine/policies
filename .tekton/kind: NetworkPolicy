kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: backend-policy
spec:
  podSelector:
    matchLabels:
      tier: backend
    ports:
      port: 6379
  ingress:
  - from:
    - podSelector:
        matchLabels:
          tier: frontend
---
kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: route-policy
spec:
  podSelector:
    matchLabels:
      tier: frontend
    ports:
      port: 80
  ingress:
  - from:
    - podSelector:
        matchLabels:
          route: frontend
